{
    "name": "indigophp/http-adapter",
    "description": "Provides adapters for common HTTP Client libraries",
    "license": "MIT",
    "keywords": ["http", "client", "adapter"],
    "homepage": "https://indigophp.com",
    "authors": [
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/sagikazarmark/Stash.git"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "psr/http-message": "~0.5.1"
    },
    "require-dev": {
        "league/event": "dev-master",
        "league/url": "~3.3.0",
        "tedivm/stash": "dev-feature/pool-trait",
        "kriswallsmith/buzz": "v0.13",
        "guzzle/guzzle": "~3.9.0",
        "guzzlehttp/guzzle": "~5.0.0",
        "phpspec/phpspec": "2.1.*@dev,>=2.1.0-RC2",
        "henrikbjorn/phpspec-code-coverage" : "1.0.*@dev"
    },
    "suggest": {
        "league/url": "Used for base URL handling in Client"
    },
    "autoload": {
        "psr-4": {
            "Indigo\\Http\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Indigo\\Http\\Stub\\": "stub/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
